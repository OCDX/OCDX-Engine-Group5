<h1>New Post</h1>
<hr>

<div align="center"><%= form_for (@post) do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<br>
	<div class="field">	
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<br>
	<div class="field">
		<%= f.file_field :json %>
		<%= f.hidden_field :json_cache %>
	</div>
	<br>
        <div class="field">
                <%= f.label :jsonTxt %>
                <%= f.text_area :jsonTxt %>
        </div>
        <br>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %></div>
