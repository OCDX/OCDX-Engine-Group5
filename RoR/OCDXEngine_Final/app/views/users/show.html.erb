<style>div{
	text-align:left;
	left:200px;}
</style>
<div>
<h1>Name: <%= @user.first_name %> <%= @user.last_name %></h1>
<h2>Email: <%= @user.email %></h2>
<h2>Username: <%= @user.username %></h2>
<h3>Birthday: <%= @user.birthday %></h3>
<% if @user.usertype.present? %>
<% if @user.usertype == 1 %>
<h3>Researcher</h3>
<% end %>
<% if @user.usertype == 2 %>
<h3>Admin</h3>
<% end %>
<% end %>
</div>
<hr>
<h4>Posts:</h4>
<% @user_posts.each do |post| %>
<div>	<h5><%= link_to post.title, post_path(post.id) %></h5>
<% end %>
<hr>
<% if @user.id == current_user.id %>
<%= link_to "Edit Profile", edit_user_registration_path %></div>
<% end %>
